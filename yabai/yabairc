# default layout (can be bsp, stack or float)
yabai -m config layout bsp

# new window spawns to the right if vertical split, or bottom if horizontal split
yabai -m config window_placement second_child

# Main configuration
yabai -m config top_padding 12
yabai -m config bottom_padding 12
yabai -m config left_padding 12
yabai -m config right_padding 12
yabai -m config window_gap 12

# Configuration for Sketchybar
# First set padding fot MacBook screen
# Then use external_bar config for my 27" monitor
# yabai -m config top_padding 5
# yabai -m config bottom_padding 10
# yabai -m config left_padding 10
# yabai -m config right_padding 10
# yabai -m config window_gap 10
# yabai -m config external_bar [<main|all|off>:<top_padding>:<bottom_padding>]
# main: Apply the given padding only to spaces located on the main display.
# all: Apply the given padding to all spaces regardless of their display.
# off: Do not apply any special padding.
# yabai -m config external_bar main:40:1

# autofocus windows when mouse pass over
yabai -m signal --add event=application_front_switched action="yabai -m window --layer normal"
yabai -m signal --add event=window_destroyed active=yes action="yabai -m query --windows --window &> /dev/null || yabai -m window --focus mouse &> /dev/null || yabai -m window --focus \$(yabai -m query --windows --space | jq .[0].id) &> /dev/null"
yabai -m signal --add event=window_minimized active=yes action="if \$(yabai -m query --windows --window \$YABAI_WINDOW_ID | jq -r '.\"is-floating\"'); then yabai -m query --windows --window &> /dev/null || yabai -m window --focus mouse &> /dev/null || yabai -m window --focus \$(yabai -m query --windows --space | jq .[0].id) &> /dev/null; fi"
yabai -m config focus_follows_mouse autofocus

# center mouse on window with focus
yabai -m config mouse_follows_focus on

# modifier for clicking and dragging with mouse
yabai -m config mouse_modifier alt

# set modifier + left-click drag to move window
yabai -m config mouse_action1 move

# set modifier + right-click drag to resize window
yabai -m config mouse_action2 resize

# when window is dropped in center of another window, swap them (on edges it will split it)
yabai -m mouse_drop_action swap

# disable specific apps
yabai -m rule --add app="^System Settings$" manage=off
yabai -m rule --add app="^Music$"  manage=off
yabai -m rule --add app="^Calculator$" manage=off
yabai -m rule --add app="^QuickTime Player$" manage=off
yabai -m rule --add app="^WhatsApp$"  manage=off
yabai -m rule --add app="^App Store$"  manage=off
yabai -m rule --add app="^Calendar$"  manage=off
yabai -m rule --add app="^Home$"  manage=off
yabai -m rule --add app="^coconutBattery$"  manage=off
yabai -m rule --add app="^DaisyDisk$"  manage=off
yabai -m rule --add app="^Discord$"  manage=off
yabai -m rule --add app="^Contacts$"  manage=off
yabai -m rule --add app="^Dictionary$"  manage=off
yabai -m rule --add app="^Keka$"  manage=off
yabai -m rule --add app="^Pixelmator Pro$"  manage=off
yabai -m rule --add app="^System Information$"  manage=off
yabai -m rule --apply
